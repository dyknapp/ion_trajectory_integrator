# LAMMPS Input file generated using LIon, a Matlab wrapper for ion trap simulations
# Lion Version: 876eebf69844a8b84affbd30305f46e2e1a6861f
###################################################################################

# No GPU acceleration will be enabled. (sim.GPUAccel = false)

units si
atom_style charge

#Creating simulation box...
boundary m m m
region simulationDomain block -1.000000e-03 1.000000e-03 -1.000000e-03 1.000000e-03 -1.000000e-03 1.000000e-03 units box
create_box 1 simulationDomain

# Configure Neighbor list: 
neighbor 1.000 nsq
neigh_modify once yes

# Configure pairwise interactions for long range Coulombics only
pair_style coul/cut 1.000000e+01
pair_coeff * * 

# Placing atoms
create_atoms 1 single -1.686138e-08 1.066992e-08 2.058863e-08 units box
create_atoms 1 single -8.692169e-10 3.329415e-09 2.669335e-10 units box
create_atoms 1 single 3.073861e-09 -7.348365e-10 -2.405243e-09 units box
create_atoms 1 single 3.375456e-09 1.047757e-08 1.038475e-08 units box
# Atom definitions
mass 1 1.660000e-27
set type 1 charge 1.600000e-19

timestep 1.000000e-09

# Configuring additional output to flush buffer during simulation 
thermo 10000
thermo_style custom step cpu
thermo_modify flush yes
fix extra all print 10 "SIMULATION RUNNING----------------------"

# Group definitions:
# (1 group(s))
group grp_cydde type 1 

# Time integration: 
group nonRigidBody union all
fix timeIntegrator nonRigidBody nve
#Dump output
dump qfqjcj all custom 1 positions.txt id x y z vx vy vz 
#Run simulation
run 10000
